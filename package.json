{
  "name": "socialer",
  "version": "1.0.0",
  "description": "A modern social media platform designed to connect people and communities in meaningful ways",
  "main": "src/server/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon src/server/index.js",
    "client:dev": "cd src/client && npm run dev",
    "build": "npm run client:build && npm run server:build",
    "client:build": "cd src/client && npm run build",
    "server:build": "echo 'Server build completed'",
    "start": "NODE_ENV=production node src/server/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "db:migrate": "npx prisma migrate dev",
    "db:seed": "node src/server/prisma/seed.js",
    "db:studio": "npx prisma studio"
  },
  "keywords": [
    "social-media",
    "social-network",
    "react",
    "node",
    "typescript",
    "prisma",
    "postgresql"
  ],
  "author": "Nir Wolff <nir@example.com>",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "redis": "^4.6.12",
    "socket.io": "^4.7.4",
    "validator": "^13.11.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@babel/plugin-transform-runtime": "^7.23.6",
    "@eslint/js": "^9.15.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.10",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/supertest": "^2.0.16",
    "@types/validator": "^13.11.7",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.15.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "prisma": "^5.7.1",
    "supertest": "^6.3.3",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}